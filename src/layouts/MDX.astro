<article id="article_container">
    <slot />
</article>

<style is:global>
#article_container {
    overflow-y: auto;
    padding: 0 60px 100px 60px;
    height: 100%;
    & video {
        width: 100%;
        border-radius: 10px;
    }
    & ul {
        padding: 0;
        & li {
            list-style-type: none;
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 12px 0;
            &::before {
                content: "";
                width: 10px;
                height: 2px;
                border-radius: 100px;
                background: #373227;
            }
        }
    }
    & pre, & details pre {
        padding: 20px;
        border-radius: 20px;
        font-size: 1rem;
        line-height: 1.4rem;
        background: black;
    }
    & details summary {
        & .rcon {
            padding: 15px 20px;
            user-select: none;
            background: #373227;
        }
        list-style-type: none;
        &:hover {
            background-color: #ffffff22;
            transition: .3s;
        }
    }
    & .rcon.ripple_example {
        height: 100px;
        background: #ffffff10;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        font-size: 1.5rem;
        border-radius: 20px;
        user-select: none;
        &.example_big {
            margin: 20px 0;
            height: 500px;
        }
    }
    & .rcon {
        /* Workaround(m3ripple's css modules is not working) */
        overflow: hidden;
        position: relative;
        z-index: 0;

        & .ripple {
          position: absolute;
          border-radius: 100%;
          z-index: -1;
          transform: translateX(-50%) translateY(-50%);
          pointer-events: none;
          display: flex;
          align-items: center;
          justify-content: center;
          user-select: none;
        }
        & .sparkles_canvas {
          position: absolute;
          user-select: none;
        }
    }
    a {
        color: #c2af84;
        &:active {
            text-decoration: none;
        }
    }
    & h2 {
        font-size: 2.5rem;
        font-weight: 500;
    }
    & p {
        line-height: 1.9rem;
        font-size: 1.15rem;
        color: #ffffffcc;
        padding: 0;
        margin: 0;
        & code {
            background: #423629;
            border-radius: 5px;
            padding: 3px 6px;
        }
    }
    & h3 {
        text-transform: uppercase;
        color: #f7ca9a;
        letter-spacing: 1px;
        font-weight: 500;
        font-size: 1.3rem;
        margin-top: 40px;
        margin-bottom: 20px;
    }
}
@media screen and (max-width: 730px) {
    #article_container {
        padding: 0 20px 100px 20px;
    }
}
</style>
